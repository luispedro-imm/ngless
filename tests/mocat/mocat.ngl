ngless "0.0"
import "mocat" version "0.0"

input = load_mocat_sample('mocat_sample_gz')

trim = 3
preprocess(input) using |read|:
   read = read[trim:]
   if len(read) < 10:
       discard
write(input, ofile='output.fq')


